$mod = SUPER
$term = kitty


#### SYSTEM KEYBINDINGS

# Open terminal
bind = $mod, i, exec, \
  ~/.config/kitty/scripts/kitty-scratch.sh

# Lock screen
bind = $mod, l, exec, \
  /etc/scripts/system/sway-lock.sh

# Open power menu
bind = $mod, Escape, exec, \
  rofi-powermenu

# Open app launcher
bind = $mod, space, exec, \
  rofi-launcher

# Take fullscreen screenshot
bind = $mod, Print, exec, \
  /etc/scripts/system/takeshot.sh --now

# Open calc
bind = $mod, c, exec, \
  rofi-calc

# Open wifi menu
# bind = $mod, w, exec, \
#   /etc/scripts/wofi-wifi.sh

# TODO: Show keybindings

# Show clipboard
bind = $mod, v, exec, \
  /etc/scripts/system/clipboard-manager.sh --menu

# Clear clipboard
bind = $mod SHIFT, v, exec, \
  /etc/scripts/system/clipboard-manager.sh --clear

# Show emojis
bind = $mod, e, exec, \
  rofi-emoji

bind = $mod CTRL, n, exec, \
  dunstctl history-pop

bind = $mod CTRL SHIFT, n, exec, \
  dunstctl close

bind = $mod CTRL SHIFT, Escape, exec, \
  dunstctl close-all

# Toggle waybar
bind = $mod, b, exec, \
  /etc/scripts/waybar/waybar-toggle.sh


### WM KEYBINDINGS

# Close focused window
bind = SUPER SHIFT, w, killactive

# Toggle float
bind = SUPER, s, togglefloating

# Toggle fullscreen
bind = SUPER, f, fullscreen

# Set the node flags (sticky)
bind = SUPER CTRL, y, pin

# Alternate between the tiled and monocle layout
bind = $mod, a, submap, layout
submap = layout
bind = , c, centerwindow
bind = , c, submap, reset
bind = , escape, submap, reset
submap = reset

# Focus direction
bind = $mod, left, movefocus, l
bind = $mod, down, movefocus, d
bind = $mod, up, movefocus, u
bind = $mod, right, movefocus, r

# Swap direction
bind = $mod SHIFT, left, swapwindow, l
bind = $mod SHIFT, down, swapwindow, d
bind = $mod SHIFT, up, swapwindow, u
bind = $mod SHIFT, right, swapwindow, r

# bindsym $mod+n focus next
# bindsym $mod+Shift+n focus prev

bind = SUPER, 1, workspace, 1
bind = SUPER, 2, workspace, 2
bind = SUPER, 3, workspace, 3
bind = SUPER, 4, workspace, 4
bind = SUPER, 5, workspace, 5
bind = SUPER, 6, workspace, 6
bind = SUPER, 7, workspace, 7
bind = SUPER, 8, workspace, 8
bind = SUPER, 9, workspace, 9
bind = SUPER, 0, workspace, 10

bind = SUPER SHIFT, 1, movetoworkspace, 1
bind = SUPER SHIFT, 2, movetoworkspace, 2
bind = SUPER SHIFT, 3, movetoworkspace, 3
bind = SUPER SHIFT, 4, movetoworkspace, 4
bind = SUPER SHIFT, 5, movetoworkspace, 5
bind = SUPER SHIFT, 6, movetoworkspace, 6
bind = SUPER SHIFT, 7, movetoworkspace, 7
bind = SUPER SHIFT, 8, movetoworkspace, 8
bind = SUPER SHIFT, 9, movetoworkspace, 9
bind = SUPER SHIFT, 0, movetoworkspace, 10

# Resize
bind = $mod ALT SHIFT, left, resizeactive, -40 0
bind = $mod ALT SHIFT, down, resizeactive, 0 40
bind = $mod ALT SHIFT, up, resizeactive, 0 -40
bind = $mod ALT SHIFT, right, resizeactive, 40 0

# Move
bind = $mod ALT, left, moveactive, -40 0
bind = $mod ALT, down, moveactive, 0 40
bind = $mod ALT, up, moveactive, 0 -40
bind = $mod ALT, right, moveactive, 40 0


### WM SCRATCHPAD

# Send to scratchpad
bind = $mod SHIFT, p, movetoworkspace, special

# Open scratchpad
bind = $mod, p, togglespecialworkspace


### APPLICATION KEYBINDINGS (Super + Alt + Key)

# Open primary terminal
bind = $mod ALT, t, exec, \
  $term

# Open file manager
bind = $mod ALT, f, exec, \
  nautilus
# TODO:

# Screencast/record region to mp4
bind = $mod ALT, r, exec, \
  /etc/scripts/system/recorder.sh --area

# Open screenshoot utility
bind = $mod ALT, s, exec, \
  /etc/scripts/system/takeshot.sh --area

# Open color picker
bind = $mod ALT, c, exec, \
  /etc/scripts/system/color-picker.sh

# Open Browser
bind = $mod ALT, b, submap, browser
submap = browser
bind = , b, exec, brave
bind = , b, submap, reset
bind = , g, exec, google-chrome-stable
bind = , g, submap, reset
bind = , f, exec, firefox
bind = , f, submap, reset
bind = , escape, submap, reset
submap = reset


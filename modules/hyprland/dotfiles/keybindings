# TODO: Open magnifying glass


### MEDIA KEYBINDINGS

bind = , XF86KbdBrightnessDown, exec, \
  /etc/scripts/kbd-backlight.sh 5%-

bind = , XF86KbdBrightnessUp, exec, \
  /etc/scripts/kbd-backlight.sh 5%+

bind = , XF86MonBrightnessUp, exec, \
  /etc/scripts/backlight.sh 5%+

bind = , XF86MonBrightnessDown, exec, \
  /etc/scripts/backlight.sh 5%-

bind = , XF86AudioRaiseVolume, exec, \
  pactl set-sink-volume @DEFAULT_SINK@ +5%

bind = , XF86AudioLowerVolume, exec, \
  pactl set-sink-volume @DEFAULT_SINK@ -5%

bind = , XF86AudioMute, exec, \
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Play next media
bind = , XF86AudioNext, exec, \
  playerctl next

# Pause media
bind = , XF86AudioStop, exec, \
  playerctl pause

# Play media
bind = , XF86AudioPlay, exec, \
  playerctl play-pause

# Play previous media
bind = , XF86AudioPrev, exec, \
  playerctl previous

# vim: syntax=sh

  border_size = 2
  gaps_in = 7
  gaps_out = 7
  col.inactive_border = $seletion
  col.active_border = $primary
  col.group_border = $selection
  col.group_border_active = $primary
  cursor_inactive_timeout = 5
  layout = master
  # no_cursor_warps
}


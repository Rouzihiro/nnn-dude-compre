  kb_layout = "us"
  sensitivity = 0
  accel_profile = "flat"
  sensitivity = "2fg"
  natural_scroll = true

  touchpad {
    natural_scroll = true
    # middle_button_emulation = true
    tap-to-click = false
  }
}


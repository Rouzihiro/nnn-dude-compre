  rounding = 4
  blur_size = 5
  blur_passes = 2
  # blur_xray = true
  shadow_range = 4
  shadow_render_power = 3
  col.shadow = rgba(292c3cee)
  # col.shadow_inactive = rgba(292c3cee)
  shadow_offset
  shadow_scale
}


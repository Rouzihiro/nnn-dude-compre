{ config, pkgs, lib, ... }:

let userName = config._userName;
in {
  config = {
    home-manager.users.${userName} = {
      programs.autorandr = {
        enable = true;
        hooks = {
          postswitch = {
            # TODO: reload bspwm
            # TODO: reload polybar
            "change-background" = "/etc/scripts/random-bg.sh";
            "change-dpi" = builtins.readFile ./scripts/change-dpi.sh;
          };
        };
        profiles = {
          "desktop-4k" = {
            fingerprint = {
              HDMI-0 =
                "";
              DP-2 =
                "";
            };
            config = {
              DP-2.enable = false;
              HDMI-0 = {
                enable = true;
                crtc = 0;
                dpi = 144;
                mode = "3840x2160";
                position = "0x0";
                primary = true;
                rate = "60.00";
              };
            };
          };
          "desktop-1080p" = {
            fingerprint = {
              HDMI-0 =
                "";
              DP-2 =
                "";
            };
            config = {
              HDMI-0.enable = false;
              DP-2 = {
                enable = true;
                crtc = 0;
                dpi = 96;
                mode = "1920x1080";
                position = "0x0";
                primary = true;
                rate = "144.00";
              };
            };
          };
        };
      };
    };
  };
}


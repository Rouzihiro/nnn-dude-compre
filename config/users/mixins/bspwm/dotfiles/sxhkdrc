### BSPWM HOTKEYS

# Reload keybindings
super + ctrl + Escape
  pkill -USR1 -x sxhkd

# Open power menu
super + Escape
	/etc/scripts/rofi-powermenu.sh

# Take fullscreen screenshoot
super + Print
  /etc/scripts/takeshot.sh --now

# Open app launcher
super + space
  /etc/scripts/rofi-launcher.sh

# Open calc
super + c
  /etc/scripts/rofi-calc.sh

# Open wifi menu
super + w
  /etc/scripts/rofi-nm.sh

# Show help
super + slash
  /etc/scripts/rofi-help.sh

# Show clipboard
super + v
  /etc/scripts/rofi-clipboard.sh

# Clear clipboard
super + shift + v
  clipdel -d ".*"

# Show emojis
super + e
  /etc/scripts/rofi-emoji.sh

# Open terminal
super + Return
  kitty

# Close and kill
super + shift + {w,q}
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + l ; {m,s,t,w}
  bsp-layout set { monocle, stack, tall, wide }

# Center floating window
super + l ; c
  /etc/scripts/bspwm_center_window.sh

# Send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked -n newest.!automatic

# Send the newest marked node to the newest preselected node in current desktop
super + u
	bspc node newest.marked.local -n newest.!automatic.local

# Send current node to the newest preselected node
super + shift + m
  bspc node -n last.!automatic

# swap the current node and the biggest node
super + g
  bspc node -s biggest.local

# Kinda of `MacOS alt + grave` like
# super + grave
#   bspc node last.same_class.local -f

### STATE/FLAGS

# Set the window state (tiled|pseudo_tiled|floating)
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# Toggle fullscreen
super + f
  bspc node -t \~fullscreen

# Set the node flags (marked|locked|sticky|private|hidden)
super + ctrl + {m,x,y,z,h}
	bspc node -g {marked,locked,sticky,private,hidden}


### PRESELECT

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


### FOCUS/SWAP

# Focus or switch the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump (parent|brother|first|second)
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# Rotate focused nodes
# super + grave
#   bspc node -R 90

# Rotate tree
super + shift + {d,a}
  bspc node @/ -C {forward,backward}

# Focus the next|previous node in the current desktop
super + {_,shift + }n
  bspc node -f {next,prev}.local.window.!hidden

# Focus the next|previous workspace in the current monitor
# super + {Left,Right}
# 	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Open hidden windows
super + alt + Tab
  /etc/scripts/rofi-hidden-windows.sh

# Open windows
alt + Tab
  NODES_QUERY=".!hidden.local.window" /etc/scripts/rofi-hidden-windows.sh

# # Focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

super + {_, shift +}F1
  bspc {desktop -f,node -d} focused:'^5'

super + {_, shift +}F2
  bspc {desktop -f,node -d} focused:'^6'

super + {_, shift +}F3
  bspc {desktop -f,node -d} focused:'^7'

super + {_, shift +}F4
  bspc {desktop -f,node -d} focused:'^8'

# # Send and follow to given desktop
# super + ctrl + shift + {1-9}
#   id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}


### MOVE/RESIZE

# Expand a window by moving one of its side outward
super + r : {Left,Down,Up,Right}
  bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# Contract a window by moving one of its side inward
super + r : shift + {Left,Down,Up,Right}
  bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

super + r : Escape
  pkill -ALRM sxhkd

# Move a floating window
super + m : {Left,Down,Up,Right}
  bspc node -v {-40 0,0 40,0 -40,40 0}

super + m : Escape
  pkill -ALRM sxhkd

### APPLICATION KEYBINDINGS (Super + Alt + Key)

# Toggle polybar
super + alt + p
  /etc/scripts/polybar-toggle.sh

# Lock screen
super + alt + l
  /etc/scripts/lock.sh

# Open file manager
super + alt + f
  /etc/scripts/bspwm_toggle_visibility.sh Org.gnome.Nautilus nautilus

# Screencast/record region to mp4
super + alt + r
  /etc/scripts/scrrec.sh -s ~/Recordings/$(date +%F-%T).mp4

# Open screenshoot utility
super + alt + s
  /etc/scripts/takeshot.sh --area

# Open color picker
super + alt + c
  /etc/scripts/color-pick.sh

# Open Browser
super + alt + b ; {f,c,b}
  /etc/scripts/bspwm_open_or_focus.sh {firefox,google-chrome-stable,brave}

# Open terminal
super + alt + t ; {k,a}
  {kitty,alacritty}

# Open scratch terminal
super + alt + t ; s
  /etc/scripts/bspwm_toggle_visibility.sh kitty-scratch '/etc/scripts/start-kitty-scratch.sh'

# Open magnifying glass
super + alt + z
  kmag

# Open quick note app
super + alt + n
  /etc/scripts/bspwm_toggle_visibility.sh kitty-neorg "/etc/scripts/start-neorg.sh"

# Open monitor
super + alt + m
  /etc/scripts/bspwm_toggle_visibility.sh kitty-htop 'kitty --class kitty-htop --title htop -e htop'

super + ctrl + n
  dunstctl history-pop

super + ctrl + shift + n
  dunstctl close

super + ctrl + shift + Escape
  dunstctl close-all

### MEDIA KEYBINDINGS

XF86MonBrightness{Down,Up}
  brightnessctl set {5%-,5%+}
  # light {-U 5,-A 5}

XF86Audio{LowerVolume,RaiseVolume}
  pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Play next media
XF86AudioNext
	playerctl next

# Pause media
XF86AudioStop
	playerctl pause

# Play media
XF86AudioPlay
	playerctl play-pause

# Play previous media
XF86AudioPrev
	playerctl previous

# vim: syntax=sh


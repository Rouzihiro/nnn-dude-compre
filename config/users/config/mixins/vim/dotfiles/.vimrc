set tabstop = 2
set softtabstop = 2
set shiftwidth = 2
set expandtab

set clipboard+=unnamedplus

set autoindent
set smartindent
set nowrap

set number
set relativenumber

set signcolumn="yes"

" maintain cursor centered?
set scrolloff=8
set sidescrolloff=8

" save some stroke
nnoremap ; :
vnoremap ; :

" paste last thing yanked, not deleted
" nmap ,p "0p
" nmap ,P "0P

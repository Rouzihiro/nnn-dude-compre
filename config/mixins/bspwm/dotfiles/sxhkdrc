### BSPWM HOTKEYS

# Reload keybindings
super + ctrl + Escape
  pkill -USR1 -x sxhkd

# Open power menu
super + Escape
	/etc/scripts/rofi-powermenu.sh

# Take fullscreen screenshoot
super + Print
  flameshot full -p ~/Pictures/screenshots/

# Open app launcher
super + space
  /etc/scripts/rofi-launcher.sh

# Open calc
super + c
  /etc/scripts/rofi-calc.sh

# Show help
super + slash
  /etc/scripts/rofi-help.sh

# Show clipboard
super + v
  /etc/scripts/rofi-clipboard.sh

# Show emojis
super + e
  /etc/scripts/rofi-emoji.sh

# Open terminal
super + Return
  kitty

# Close and kill
super + shift + {w,q}
	bspc node -{c,k}

# Alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked -n newest.!automatic

# Send the newest marked node to the newest preselected node in current desktop
super + u
	bspc node newest.marked.local -n newest.!automatic.local

# Send current node to the newest preselected node
super + shift + m
  bspc node -n last.!automatic

# swap the current node and the biggest node
super + g
  bspc node -s biggest

# Kinda of `MacOS alt + grave` like
super + grave
  bspc node last.same_class.local -f

### STATE/FLAGS

# Set the window state (tiled|pseudo_tiled|floating)
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# Toggle fullscreen
super + f
  bspc node -t \~fullscreen

# Set the node flags (marked|locked|sticky|private|hidden)
super + ctrl + {m,x,y,z,h}
	bspc node -g {marked,locked,sticky,private,hidden}


### PRESELECT

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


### FOCUS/SWAP

# Focus or switch the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump (parent|brother|first|second)
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# Rotate focused nodes
# super + grave
#   bspc node -R 90

# Rotate tree
super + shift + {d,a}
  bspc node @/ -C {forward,backward}

# Expand/contract a window by moving one of its side outward/inward
super + r : {Left,Down,Up,Right}
  STEP=40; SELECTION={1,2,3,4}; \
  bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
  bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Focus the next|previous node in the current desktop
# super + {_,shift + }n
#   bspc node -f {next,prev}.local

# Focus the next|previous workspace in the current monitor
# super + {Left,Right}
# 	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# # Focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

super + {_, shift +}F1
  bspc {desktop -f,node -d} focused:'^5'

super + {_, shift +}F2
  bspc {desktop -f,node -d} focused:'^6'

super + {_, shift +}F3
  bspc {desktop -f,node -d} focused:'^7'

super + {_, shift +}F4
  bspc {desktop -f,node -d} focused:'^8'

# # Send and follow to given desktop
# super + ctrl + shift + {1-9}
#   id=$(bspc query -N -n); bspc node -d ^{1-9}; bspc node -f ${id}


### MOVE/RESIZE

# # Expand a window by moving one of its side outward
# ctrl + alt + {h,j,k,l}
# 	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# # Contract a window by moving one of its side inward
# ctrl + alt + shift + {h,j,k,l}
# 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# # move a floating window
# super + {Left,Down,Up,Right}
#   bspc node -v {-20 0,0 20,0 -20,20 0}


### APPLICATION KEYBINDINGS (Super + Alt + Key)

# Show polybar
super + alt + p
  /etc/scripts/polybar-show.sh

# Hide polybar
super + shift + alt + p
  /etc/scripts/polybar-hide.sh

# Lock screen
super + alt + l
  /etc/scripts/lock.sh

# Open file manager
super + alt + f
  /etc/scripts/bspwm_toggle_visibility.sh Org.gnome.Nautilus nautilus

# Screencast/record region to mp4
super + alt + r
  /etc/scripts/scrrec.sh -s ~/Recordings/$(date +%F-%T).mp4

# Open screenshoot utility
super + alt + s
  flameshot gui

# Open color picker
super + alt + c
  pick-colour-picker --pick

# Open Browser
super + alt + b ; {f,c,b}
  {firefox,google-chrome-stable,brave}

# Open terminal
super + alt + t ; {k,a}
  {kitty,alacritty}

# Open magnifying glass
super + alt + z
  kmag

# Open quick note app
super + alt + n
  subl

super + ctrl + n
  dunstctl history-pop

super + ctrl + shift + n
  dunstctl close

super + ctrl + shift + Escape
  dunstctl close-all

### MEDIA KEYBINDINGS

XF86MonBrightness{Down,Up}
  light {-U 10,-A 10}

XF86Audio{LowerVolume,RaiseVolume}
  pactl set-sink-volume @DEFAULT_SINK@ {-5%,+5%}

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Play next media
XF86AudioNext
	playerctl next

# Pause media
XF86AudioStop
	playerctl pause

# Play media
XF86AudioPlay
	playerctl play-pause

# Play previous media
XF86AudioPrev
	playerctl previous

# Increase volume
# XF86AudioRaiseVolume
#   /etc/eww_vol.sh up

# Decrease volume
# XF86AudioLowerVolume
#   /etc/eww_vol.sh down

# Toggle mute
# XF86AudioMute
#   /etc/eww_vol.sh mute


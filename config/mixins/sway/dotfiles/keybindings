# vim: syntax=sh

# Exit sway (logs you out of your Wayland session)
# bindsym $mod+Escape exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

#### SWAY keybindings ####

set $mod Mod4
set $left left
set $down down
set $up up
set $right right
set $term kitty

floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Ctrl+Escape reload

# Open power menu
bindsym $mod+Escape exec \
  swaymsg exec /etc/scripts/wofi-powermenu.sh

# Take fullscreen screenshot
bindsym $mod+Print exec \
  /etc/scripts/takeshot.sh --now

# Open app launcher
bindsym $mod+space exec \
  swaymsg exec /etc/scripts/wofi-launcher.sh

# Open calc
# TODO

# Open wifi menu
bindsym $mod+w exec \
  swaymsg exec /etc/scripts/wofi-wifi.sh

# Show help
# TODO

# Show clipboard
bindsym $mod+v exec /etc/scripts/wofi-clipboard.sh

# Clear clipboard
bindsym $mod+Shift+v exec clipman clear --all

# Show emojis
# TODO

# Open terminal
bindsym $mod+Return exec $term

# Close focused window
bindsym $mod+Shift+w kill

# Alternate between the tiled and monocle layout
mode "layout" {
  bindsym m mode "default"; layout tabbed
  bindsym s mode "default"; layout splith
  bindsym c mode "default"; move position center
  bindsym Escape mode "default"
}
bindsym $mod+l mode "layout"


### STATE/FLAGS

# Set the window state (tiled|floating)
bindsym $mod+s floating enable
bindsym $mod+t floating disable

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Set the node flags (sticky)
bindsym $mod+ctrl+y sticky toggle

bindsym $mod+ctrl+h move container to scratchpad


### PRESELECT

# preselect the direction
bindsym $mod+ctrl+Right split horizontal
bindsym $mod+ctrl+Down split vertical
bindsym $mod+ctrl+space split none


### FOCUS/SWAP

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+n focus next
bindsym $mod+Shift+n focus prev

# Open hidden windows
bindsym $mod+alt+Tab scratchpad show

# Focus floating or tile windows
bindsym alt+Tab focus mode_toggle


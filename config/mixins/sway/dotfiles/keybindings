bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10


### MOVE/RESIZE
mode "resize" {
  bindsym $left resize shrink width 40px
  bindsym $down resize grow height 40px
  bindsym $up resize shrink height 40px
  bindsym $right resize grow width 40px
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "move" {
  bindsym $left move left 40px
  bindsym $down move down 40px
  bindsym $up move up 40px
  bindsym $right move right 40px
  bindsym Escape mode "default"
}
bindsym $mod+m mode "move"


### APPLICATION KEYBINDINGS (Super + Alt + Key)

# Toggle waybar
bindsym $mod+alt+p exec \
  /etc/scripts/waybar/waybar-toggle.sh

# Lock screen
bindsym $mod+alt+l exec \
  /etc/scripts/sway-lock.sh

# Open file manager
bindsym $mod+alt+f exec \
  sway-focus.sh --toggle-scratchpad "org.gnome.Nautilus" nautilus

# Screencast/record region to mp4
bindsym $mod+alt+r exec \
  /etc/scripts/recorder.sh --area

# Open screenshoot utility
bindsym $mod+alt+s exec \
  /etc/scripts/takeshot.sh --area

# Open color picker
bindsym $mod+alt+c exec \
  /etc/scripts/color-picker.sh clipboard

# Open Browser
mode "browser" {
  bindsym b mode "default"; exec brave
  bindsym c mode "default"; exec google-chrome-stable
  bindsym f mode "default"; exec firefox
  bindsym Escape mode "default"
}
bindsym $mod+alt+b mode "browser"


# Open terminal
mode "terminal" {
  bindsym a mode "default"; exec alacritty
  bindsym k mode "default"; exec kitty
  bindsym s mode "default"; exec sway-focus.sh --toggle-scratchpad kitty-scratch /etc/scripts/kitty-scratch.sh
  bindsym Escape mode "default"
}
bindsym $mod+alt+t mode "terminal"

# Open magnifying glass
# TODO

# Open quick note app
bindsym $mod+alt+n exec \
  sway-focus.sh --toggle-scratchpad kitty-neorg /etc/scripts/kitty-neorg.sh

# Open monitor
bindsym $mod+alt+m exec \
  sway-focus.sh --toggle-scratchpad kitty-htop /etc/scripts/kitty-htop.sh

bindsym $mod+ctrl+n exec \
  makoctl restore

bindsym $mod+ctrl+shift+n exec \
  makoctl dismiss

bindsym $mod+ctrl+shift+Escape exec \
  makoctl dismiss --all


### MEDIA KEYBINDINGS

bindsym XF86MonBrightnessUp exec \
  brightnessctl set 5%+
  # light {-U 5,-A 5}

bindsym XF86MonBrightnessDown exec \
  brightnessctl set 5%-
  # light {-U 5,-A 5}

bindsym XF86AudioRaiseVolume exec \
  pactl set-sink-volume @DEFAULT_SINK@ +5%

bindsym XF86AudioLowerVolume exec \
  pactl set-sink-volume @DEFAULT_SINK@ -5%

bindsym XF86AudioMute exec \
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Play next media
bindsym XF86AudioNext exec \
  playerctl next

# Pause media
bindsym XF86AudioStop exec \
  playerctl pause

# Play media
bindsym XF86AudioPlay exec \
  playerctl play-pause

# Play previous media
bindsym XF86AudioPrev exec \
  playerctl previous

